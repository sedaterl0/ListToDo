<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sedater.listtodo.Main2Activity"
    tools:showIn="@layout/activity_main2"
    android:id="@+id/relative"
    android:background="#33ffff">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/textView5"
    android:text="Son Tarih:"
    android:textSize="20dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Öncelik:"
        android:textSize="20dp"
        android:id="@+id/textView6"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/txtpriority"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="deneme"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:background="#33ffcc"
        android:layout_alignTop="@+id/textView6" />
    <TextView
        android:id="@+id/txtdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="deneme"
        android:textSize="15dp"
        android:background="#33ffcc"
        android:gravity="center"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentTop="true" />
    <TextView
        android:text="deneme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:gravity="center"
        android:textSize="20dp"
        android:background="#33ffcc"
        android:layout_alignTop="@+id/textView" />
    <TextView
        android:text="Başlık:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="25dp"

        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="İçerik:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:text="deneme"

        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:gravity="center"
        android:textSize="18dp"
        android:background="#33ffcc"/>
    <ImageButton
        android:id="@+id/smsbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_textsms_black_24dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
