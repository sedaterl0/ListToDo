<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/baslik"
    android:text="üst deneme"
    android:gravity="center"
    android:textSize="20sp"
    android:textColor="#000000"
    android:textStyle="bold"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/altbaslik"
        android:text="alt deneme"
        android:gravity="center"
        android:textSize="17sp"
        android:textColor="#000000"
        android:textStyle="italic"
        android:layout_below="@+id/baslik"
        android:layout_centerHorizontal="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtbaslik"
        android:layout_below="@+id/altbaslik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Başlık Giriniz"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editgiris"
        android:layout_below="@+id/edtbaslik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Görev Giriniz"/>
<RadioGroup
    android:id="@+id/radiogrup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/editgiris"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/azonem"
        android:text="Az Önemli"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onem"
        android:text="Önemli"
        />
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cokonem"
        android:text="Çok Önemli"
        />

</RadioGroup>

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogrup"
        android:layout_centerHorizontal="true" />

</RelativeLayout>